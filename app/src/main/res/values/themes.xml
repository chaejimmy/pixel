<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Allows us to override night specific attributes in the
         values-night folder. -->
    <style name="NightAdjusted.Theme.PaceDream" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- The final theme we use -->
    <style name="Theme.Nia" parent="NightAdjusted.Theme.PaceDream" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.PaceDream.Splash" parent="NightAdjusted.Theme.Splash">
        <!-- Use correct Android 12 splash background attribute -->
        <item name="windowSplashScreenBackground">@color/pacedream_splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/pacedream_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Nia</item>
    </style>

</resources>
